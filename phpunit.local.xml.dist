<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="vendor/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true">
  <testsuites>
    <testsuite name="azure-sdk-for-php">
      <directory suffix="Test.php">tests/unit/</directory>

      <!-- requires HTTP connection -->
      <exclude>tests/unit/WindowsAzure/Common/Internal/Http/HttpClientTest.php</exclude>

      <!-- Test that requires AZURE_STORAGE_CONNECTION_STRING -->
      <exclude>tests/unit/WindowsAzure/Common/Internal/Authentication/OAuthSchemeTest.php</exclude>
      <exclude>tests/unit/WindowsAzure/Common/Internal/OAuthRestProxyTest.php</exclude>
      <exclude>tests/unit/WindowsAzure/Common/Internal/Filters/WrapFilterTest.php</exclude>

<!--
      <exclude>tests/unit/WindowsAzure/MediaServices/MediaServicesRestProxyTest.php</exclude>
-->
      <exclude>tests/unit/WindowsAzure/ServiceBus/Internal/WrapTokenManagerTest.php</exclude>
      <exclude>tests/unit/WindowsAzure/ServiceBus/ServiceBusRestProxyTest.php</exclude>
      <exclude>tests/unit/WindowsAzure/ServiceBus/WrapRestProxyTest.php</exclude>
      <exclude>tests/unit/WindowsAzure/ServiceManagement/ServiceManagementRestProxyTest.php</exclude>

      <!-- Test that requires AZURE_STORAGE_CONNECTION_STRING but HTTP requests -->
      <exclude>tests/unit/WindowsAzure/Common/ServicesBuilderTest.php</exclude>

    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-html" target="bin/coverage" title="azure-sdk-for-php"
         charset="UTF-8" yui="true" highlight="true"
         lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="bin/logs/clover.xml"/>
    <log type="junit" target="bin/logs/unit.xml" logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src</directory>
      <exclude>
        <file>src/WindowsAzure.php</file>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
